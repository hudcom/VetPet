<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Кнопка на карті для поточного місця перебування -->

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.tabs.map.MapsFragment" />

    <!-- Поле введення адреси в верхній частині екрану -->

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/style_block_round_corner"
        android:hint="Введіть адресу для пошуку"
        android:layout_marginEnd="@dimen/very_large_space"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:paddingStart="@dimen/medium_space"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="2"
        android:padding="@dimen/small_space" />

</RelativeLayout>